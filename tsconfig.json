{
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "tests/dayx.spects"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
    }
  }
}